{
  "name": "@repo/ui-lit",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/ui-lit.umd.cjs",
  "module": "./dist/ui-lit.js",
  "exports": {
    ".": {
      "import": "./dist/ui-lit.js",
      "require": "./dist/ui-lit.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:watch": "tsc --watch --preserveWatchOutput & vite build --watch",
    "type-check": "tsc --noEmit",
    "clean": "git clean -xdf .cache .turbo dist node_modules tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lit": "^3.3.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@repo/config-typescript": "workspace:*",
    "@tailwindcss/vite": "^4.1.14",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
